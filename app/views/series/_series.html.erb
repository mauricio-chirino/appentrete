<div class="col">
  <%= javascript_include_tag "controllers/espaciovacio_controller" %>

  <div id="<%= dom_id series %>" class="row d-flex justify-content-center align-items-center gap-3 mt-5 " >
        <div class="card" style="width: 18rem;">
          <img src="<%= series.imagen %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= series.name %></h5>
              <p class="card-text {{ texto ? '' : 'empty-text' }}"><%= series.sinopsis %>.</p> <!-- controla que no exista texto vacio -->

              <% if params[:id] %>
                <% film = Series.find(params[:id]) %>
                <div id="<%= dom_id series %>">
                  <p>
                    <strong>Name:</strong>
                    <%= series.name %>
                  </p>
                  <p>
                    <strong>Director:</strong>
                    <%= series.director %>
                  </p>
                </div>
                <div class="d-flex justify-content-center gap-2">
                    <%= link_to "Regresar", series_index_path, class: "btn btn-primary" %>
                    <%= link_to "Editar", edit_series_path(@series), class: "btn btn-primary"%>
                    <%= link_to "Eliminar", @series, method: :delete, class: "btn btn-danger" %>
                  </div>

              <% else %>
                <%= link_to "Ver mas..", series, class: "btn btn-primary" %>
              <% end %>
              
            </div>
        </div>

  </div>
</div>  















